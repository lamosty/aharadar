[Unit]
Description=Aha Radar Worker (User Service)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=%h/projects/aharadar
EnvironmentFile=%h/.config/aharadar/worker.env
ExecStart=%h/.nvm/versions/node/v22.22.0/bin/node packages/worker/dist/main.js
Restart=always
RestartSec=5
KillSignal=SIGINT
TimeoutStopSec=30
NoNewPrivileges=true

[Install]
WantedBy=default.target
