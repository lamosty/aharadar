{
  "name": "aharadar",
  "private": true,
  "version": "0.0.0",
  "description": "Personalized, topic-agnostic content aggregation + ranking system (spec-first).",
  "license": "MIT",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm -r build",
    "build:cli": "pnpm --filter @aharadar/cli... build",
    "dev": "pnpm dev:cli",
    "dev:all": "pnpm -r dev",
    "dev:api": "pnpm --filter @aharadar/api build && node packages/api/dist/main.js",
    "dev:cli": "pnpm build:cli && node packages/cli/dist/main.js",
    "dev:web": "pnpm --filter @aharadar/web dev",
    "dev:web:lan": "pnpm --filter @aharadar/web dev:lan",
    "dev:worker": "pnpm --filter @aharadar/worker... build && pnpm --filter @aharadar/worker dev",
    "dev:queue-ui": "pnpm --filter @aharadar/queue-ui build && pnpm --filter @aharadar/queue-ui dev",
    "dev:services": "./scripts/dev.sh",
    "dev:services:stop": "./scripts/stop-services.sh",
    "dev:stack": "concurrently -n api,web,worker,queue-ui -c blue,green,yellow,magenta \"pnpm dev:api\" \"pnpm dev:web\" \"pnpm dev:worker\" \"pnpm dev:queue-ui\"",
    "dev:stack:lan": "concurrently -n api,web,worker,queue-ui -c blue,green,yellow,magenta \"pnpm dev:api\" \"pnpm dev:web:lan\" \"pnpm dev:worker\" \"pnpm dev:queue-ui\"",
    "dev:stack:stop": "./scripts/stop-apps.sh",
    "dev:stack:restart": "./scripts/stop-apps.sh && pnpm dev:stack",
    "start": "pnpm dev:services && pnpm dev:stack",
    "start:lan": "pnpm dev:services && pnpm dev:stack:lan",
    "stop": "./scripts/stop.sh",
    "restart": "pnpm stop && pnpm start",
    "format": "biome check --write",
    "format:check": "biome check",
    "lint:biome": "biome lint .",
    "migrate": "./scripts/migrate.sh",
    "migrate:status": "./scripts/migrate-status.sh",
    "reset": "./scripts/reset.sh",
    "logs": "./scripts/logs.sh",
    "monitoring:start": "./scripts/monitoring-start.sh",
    "monitoring:stop": "./scripts/monitoring-stop.sh",
    "monitoring:logs": "./scripts/monitoring-logs.sh",
    "test": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@openai/codex-sdk": "^0.80.0",
    "@testcontainers/postgresql": "^10.18.0",
    "@types/node": "^22.10.0",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "testcontainers": "^10.18.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css}": "biome check --write --no-errors-on-unmatched"
  }
}
