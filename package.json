{
  "name": "aharadar",
  "private": true,
  "version": "0.0.0",
  "description": "Personalized, topic-agnostic content aggregation + ranking system (spec-first).",
  "license": "MIT",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm -r build",
    "build:cli": "pnpm --filter @aharadar/cli... build",
    "dev": "pnpm dev:cli",
    "dev:all": "pnpm -r dev",
    "dev:api": "pnpm --filter @aharadar/api build && node packages/api/dist/main.js",
    "dev:cli": "pnpm build:cli && node packages/cli/dist/main.js",
    "dev:web": "pnpm --filter @aharadar/web dev",
    "dev:services": "./scripts/dev.sh",
    "dev:services:stop": "./scripts/stop-services.sh",
    "dev:stack": "concurrently -n api,web -c blue,green \"pnpm dev:api\" \"pnpm dev:web\"",
    "dev:stack:stop": "./scripts/stop-apps.sh",
    "dev:stack:restart": "./scripts/stop-apps.sh && pnpm dev:stack",
    "start": "pnpm dev:services && pnpm dev:stack",
    "stop": "./scripts/stop.sh",
    "restart": "pnpm stop && pnpm start",
    "format": "prettier --write . --ignore-unknown",
    "format:check": "prettier --check . --ignore-unknown",
    "migrate": "./scripts/migrate.sh",
    "reset": "./scripts/reset.sh",
    "logs": "./scripts/logs.sh",
    "test": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^10.18.0",
    "@types/node": "^22.10.0",
    "concurrently": "^9.2.1",
    "prettier": "^3.0.0",
    "testcontainers": "^10.18.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.1"
  }
}
